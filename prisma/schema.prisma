generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  brand       String
  line        String
  size        String
  sku         String
  loadIndex   String?
  price       Float
  stock       Int
  image       String
  description String?
  features    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  cartItems   CartItem[]
}

model CartItem {
  id           String   @id @default(cuid())
  productId    String
  quantity     Int
  selectedSize String
  createdAt    DateTime @default(now())
  
  product Product @relation(fields: [productId], references: [id])
}

model Order {
  id             String   @id @default(cuid())
  customerName   String
  customerEmail  String
  customerPhone  String
  items          Json
  total          Float
  status         String   @default("pending")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}