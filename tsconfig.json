{
  "compilerOptions": {
    "target": "ES2020",            // Atualizado para suportar private fields do Prisma
    "module": "CommonJS",          // Para Node rodar sem ESM issues
    "lib": ["es2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,      // Para permitir compilar arquivos standalone
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
